<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="stylesheet" href="./stylesheets/toastify.css" />
    <link rel="stylesheet" href="./stylesheets/style.css" />
    <script src="./js/toastify.js"></script>
    <script src="./js/moment.js"></script>
  </head>
  <body>
    <div class="menu">
      <div class="menu-item"><a href="/inbox">Inbox</a></div>
      <div class="menu-item"><a href="/users">Users</a></div>
      <% if(loggedInUserData && loggedInUserData.username){ %>
      <div class="menu-item"><a href="#" onclick="logout()">Logout</a></div>
      <% } else { %>
      <div class="menu-item"><a href="/">Login</a></div>
      <% } %>
    </div>

    <div id="login-container">
      <div id="left-column"></div>
      <div id="branding">
        <h1>EXPRESS-CHAT</h1>
        <h4>Please login with your credentials.</h4>
      </div>
      <div id="login-form">
        <form method="post" action="/">
          <input
            type="text"
            name="username"
            placeholder="Enter mobile or email"
            value="<%= data %>"
          />
          <% if(errors.username){ %>
          <p class="error show"><%= errors.username.msg %></p>
          <% } %>

          <input type="password" name="password" placeholder="Enter password" />
          <% if(errors.password){ %>
          <p class="error show"><%= errors.password.msg %></p>
          <% } %> <% if(errors.common){ %>
          <p class="error show"><%= errors.common.msg %></p>
          <% } %>

          <input type="submit" value="Login" />
        </form>
      </div>
    </div>

    <script>
      // Logout
      function logout() {
        fetch('/', {
          method: 'DELETE',
        });

        location.reload();
      }
    </script>
  </body>
</html>
